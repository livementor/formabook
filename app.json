{
  "addons": [
    "heroku-postgresql:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate && bundle exec rails db:seed"
  },
  "environments": {
    "test": {
      "env": {
        "RAILS_ENV": "test",
        "RACK_ENV": "test"
      },
      "scripts": {
        "test-setup": "rails assets:precompile",
        "test": "bundle exec rspec spec/"
      }
    }
  }
}
