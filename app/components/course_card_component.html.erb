<div class="col">
  <div class="card shadow-sm">
    <div class="p-3 d-flex align-items-center" style="min-height: 225px;">
      <%= image_tag(course.thumbnail_url, class: 'w-100') %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= course.title %></h5>
      <p class="card-text"><%= course.description %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to('voir', course.public_url, class: 'btn btn-sm btn-outline-secondary') %>
        </div>
        <%# <small class="text-muted">9 mins</small> %>
      </div>
    </div>
  </div>
</div>
